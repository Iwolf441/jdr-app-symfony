{% extends "layouts/offline.html.twig" %}
{% block content %}
    <h4 class="text-center mb-4">Connectez-vous</h4>
    <form action="index.html">
        <div class="form-group">
            <label><strong>Email</strong></label>
            <input type="email" class="form-control" value="hello@example.com">
        </div>
        <div class="form-group">
            <label><strong>Mot de passe</strong></label>
            <input type="password" class="form-control" value="Password">
        </div>
        <div class="form-row d-flex justify-content-between mt-4 mb-2">
            <div class="form-group">
                <div class="form-check ml-2">
                    <input class="form-check-input" type="checkbox" id="basic_checkbox_1">
                    <label class="form-check-label" for="basic_checkbox_1">Se souvenir de moi</label>
                </div>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-block">Se connecter</button>
        </div>
    </form>
    <div class="new-account mt-3">
        <p>Pas encore de compte ? <a class="text-primary" href="inscription.html">S'inscrire</a></p>
    </div>
{% endblock content %}