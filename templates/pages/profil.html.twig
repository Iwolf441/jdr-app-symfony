{% extends "layouts/user.html.twig" %}

 {% block content %}
     <div class="container-fluid">
         <div class="card">
             <div class="card-header">
                 <h4 class="card-title">Profil de {{ app.user.pseudo}}</h4>
             </div>
             <div class="card-body">
                 <div class="profile-photo">
                     <img src="{% if app.user.profilePicture is null %} {{ asset("/images/anon.jpg") }}{% else %} {{ asset('uploads/'~app.user.profilePicture.url)}} {% endif %}" class="img-fluid rounded-circle" alt="">
                 </div>
                 <br>
                 <h4>Statistiques</h4>
                 <a href="{{ url('collection') }}">Votre collection</a>
                 <p> Vous avez {{ bookCount}} livres <br>
                     Vous avez {{ gameCount}} jeux</p>
                 <h4>Mes informations personelles</h4>
                 <div>Adresse mail : {{ app.user.mail }}</div>
                 <div>Inscrit depuis {{ app.user.inscriptionDate |date("d/m/Y")}} </div>
                 <br>
                 <h5>Changer de mot de passe</h5>
